{
  "name": "token-sniper-bot",
  "version": "1.0.0",
  "description": "Multi-Chain Token Sniper Bot with non-custodial wallet management",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "start": "bun run dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "prisma:generate": "bunx prisma generate",
    "prisma:migrate": "bunx prisma migrate dev",
    "prisma:studio": "bunx prisma studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "solana",
    "trading-bot",
    "telegram-bot",
    "defi",
    "crypto"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@prisma/client": "^6.18.0",
    "@solana/web3.js": "^1.95.3",
    "argon2": "^0.44.0",
    "axios": "^1.13.2",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "grammy": "^1.30.0",
    "ioredis": "^5.4.1",
    "prom-client": "^15.1.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^22.5.5",
    "@vitest/coverage-v8": "^4.0.7",
    "@vitest/ui": "^4.0.7",
    "bun-types": "^1.1.30",
    "pino-pretty": "^13.1.2",
    "prisma": "^6.18.0",
    "vitest": "^4.0.7"
  }
}
